{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/jobs/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "job-service", "Port": 8081 }],
      "UpstreamPathTemplate": "/jobs/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
      
    },
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{ "Host": "identity-service", "Port": 8082 }],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "RateLimitOptions": {
        "ClientWhitelist": [ "admin-client-id" ],
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 1,
        "Limit": 5
      }
      
    },
    {
      "DownstreamPathTemplate": "/api/Applications/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "applications-service", "Port": 8083 }
      ],
      "UpstreamPathTemplate": "/applications/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
       "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "RateLimitOptions": {
        "ClientWhitelist": [ "admin-client-id" ],
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 5
      }
      
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8080"
  }
}
